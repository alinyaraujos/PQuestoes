{% extends "layout.twig" %}

{% block styles %}
    <link rel="stylesheet" type="text/css" href="{{base_url()}}/assets/questao/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="{{base_url()}}/assets/questao/css/freelancer.css">
    <link rel="stylesheet" type="text/css" href="{{base_url()}}/assets/questao/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="{{base_url()}}/assets/questao/css/freelancer.css">
    <link rel="stylesheet" type="text/css" href="{{base_url()}}/assets/questao/css/cssTela.css">
<style>

</style>

{% endblock %}

{% block title %}
Questões Cadastradas
{% endblock %}

{% block conteudo %}


<div class="container">
<br><br><br><br><br><br><br> 
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2>Arquivos</h2>
            <hr class="star-primary">
        </div>
    </div>


    <table class="table table-striped table-bordered table-advance">
                <thead>
                    <tr>
                        <th>Assunto</th>
                        <th colspan="2" style="text-align:center;">Ação</th>
                    </tr>
                </thead>
                <tbody> 
                    {% for item in arquivo %}         
                    <tr>
                        <td>{{item.nome}}</td>

                        <td width="8%">
                            <form name="form" action="/questao" method="post" >
                                <input type="hidden" name="idNome" id="idNome" value="{{item.id}}">
                                <input type="hidden" name="nomeArquivo" id="nomeArquivo" value="{{item.id}}">
                                <button type="submit" class="btn btn-primary fa fa-check-square-o">  Responder</button>
                            </form>

                        </td >
                        <td width="18%" style="border: 0;">
                            <form name="form" action="/Gabarito" method="post" >
                                <input type="hidden" name="idNome" id="idNome" value="{{item.id}}">
                                <input type="hidden" name="nomeArquivo" id="nomeArquivo" value="{{item.id}}">
                                <button type="submit" class="btn btn-primary fa fa-eye">  Ver Gabarito</button>
                            </form>

                        </td>
                    </tr >
                    {% endfor %}


                </tbody></table>



</div>


{% endblock %}

